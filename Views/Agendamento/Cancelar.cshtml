@model List<AgendamentoTransporte.Models.Agendamento>
@{
    ViewData["Title"] = "Cancelar Agendamentos";
}

<h1>Cancelar Agendamentos</h1>

<form method="get" class="mb-3">
    <label>Data: <input type="date" name="data" class="form-control" /></label>
    <label>Hora: <input type="time" name="hora" class="form-control" /></label>
    <label>Local: <input type="text" name="local" class="form-control" /></label>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>
<a href="@Url.Action("Index", "Menu")" class="btn btn-secondary mt-3">← Voltar ao Menu</a>


<table class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>Data</th>
            <th>Hora</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Local</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Data.ToShortDateString()</td>
                <td>@item.Hora</td>
                <td>@item.NomePaciente</td>
                <td>@item.Telefone</td>
                <td>@item.LocalConsulta</td>
                <td>
                    <form asp-action="CancelarConfirmado" method="post" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja cancelar este agendamento?')">Cancelar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
